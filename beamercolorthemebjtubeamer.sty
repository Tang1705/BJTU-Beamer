% Settings
\setbeamercolor*{title page header}{fg=black}
\setbeamercolor*{author}{fg=bjtugrey}
\setbeamercolor*{date}{fg=bjtugrey}
%\setbeamercolor*{date}{fg=bjtublue}
\setbeamercolor{page number in head/foot}{fg=bjtugreydark}
\setbeamercolor{section in head/foot}{fg=bjtuwhite}
\setbeamertemplate{section in head/foot shaded}{\color{bjtugreylight}\usebeamertemplate{section in head/foot}}
%\setbeamercolor{section in head/foot shaded}{fg=bjtugrey}
\setbeamercolor{frametitle}{fg=bjtublack}
\setbeamercolor{structure}{fg=bjtublue} % itemize, enumerate, etc
\setbeamercolor{section in toc}{fg=bjtublack} % TOC sections

\setbeamercolor{alerted}{fg=bjtured}

\setbeamercolor{block title}{use=structure,bg=bjtublue!20!white,fg=bjtublue}
\setbeamercolor{block body}{use=structure,bg=bjtublue!10!white}

%\setbeamercolor{block title alerted}{use=structure,bg=bjtured,fg=white}
\setbeamercolor{block title alerted}{use=structure,bg=bjtured!20!white,fg=bjtured}
\setbeamercolor{block body alerted}{use=structure,bg=bjtured!10!white}

%\setbeamercolor{block title example}{use=structure,bg=bjtugreen,fg=white}
\setbeamercolor{block title example}{use=structure,bg=bjtugreen!20!white,fg=bjtugreen}
\setbeamercolor{block body example}{use=structure,bg=bjtugreen!10!white}


\setbeamercolor*{item projected}{fg=bjtublack, bg=bjtublack}    % 目录中编号字体颜色为fg，编号图标颜色为bg

